<Window x:Class="Wpf_RichTextBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <RichTextBox Height="300" HorizontalAlignment="Left" Margin="10" VerticalAlignment="Top">
            <FlowDocument>
                <Paragraph FontSize="40" >
                    Hola caracola
                </Paragraph>
                <Paragraph FontSize="14" FontStyle="Italic" TextAlignment="Center" Foreground="Gray">
                    Gracias al control RichTextBox puedo mostrar texto enriquecido y otras cosas...
                </Paragraph>
            </FlowDocument>
        </RichTextBox>

    </Grid>
</Window>
